@page "/{id:int?}"
@model MagazinOnline.Pages.Cryptocurrencies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cryptocurrency[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cryptocurrency[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cryptocurrency[0].Price) @("(usd)")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cryptocurrency[0].Seller.SellerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cryptocurrency[0].CryptoMarketCaps)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CryptoD.Cryptocurrencies) {

    string selectedRow = "";
    if(item.ID == Model.CryptocurrencyID)
    {
        selectedRow = "table-succes ";
    }

    <tr class=" @selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <th>
                @Html.DisplayNameFor(model => model.Cryptocurrency[0].Seller.SellerName)
            </th>
        <td>
            @{
                foreach(var marketCap in item.CryptoMarketCaps)
                {
                    @marketCap.MarketCap.ID @marketCap.MarketCap.MarketCapValue <br />
                }
            }
        </td>    

        
        
        <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
        </td>
        </tr>
}
    </tbody>
</table>
